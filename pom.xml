  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jackson.version>2.9.4</jackson.version>
    <httpclient.version>4.5.5</httpclient.version>
    <!-- the following fields are for setting unique information in the RPM Release field
         Note: setting timestamp without hyphens for use in the RPM release field (hypens not allowed) -->
    <maven.build.timestamp.format>yyyyMMddHHmm</maven.build.timestamp.format>
    <!-- building a string of two variables for use in the RPM release field.  The RPM plugin does not allow
         evaluation of two variables into the <release> property.  Ugly, I know - jc -->
    <sfrelease>999999_${env.USER}</sfrelease>
    <shadeBase>net.snowflake.client.jdbc.internal</shadeBase>
  </properties>

